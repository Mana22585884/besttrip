  <body>
  <header>
  <h1></h1>
  <div class="header-list">
   <ul>
    <% if user_signed_in? %>
     <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
     <li><%= link_to "Hotel", "/spots/new/hotel" %></li>
     <li><%= link_to "Sightseeing", "/spots/new/sightseeing" %></li>
     <li><%= link_to "Restaurant", "/spots/new/restaurant" %></li>
     <li><%= link_to "Home", "/spots#index" %></li>
     <li><%= link_to "My page",user_path(current_user.id) %></li>
     
    <% else %>
    <li><%= link_to 'Log in', new_user_registration_path %></li>
    <% end %>

    
   </ul>
  </div>
 </header>
 <main>
  <%= yield %>
 </main>
